        <form method='post' action="/users/<%= session.user.id%>/favourites/<%= post.id %>">
        <input type='hidden' name='_method' value='put'>
        <button class="btn btn-small" type="submmit"><input type="image" 
               src="/images/estrella1.png" /></button>
        </form>
        <% } %>
      </h1>
     <em> <%= post.updatedAt.toLocaleDateString() %></em>
   </div>
   <p><%- escapeText(post.body) %></p>
   <img src="/home/dlara/SWCM/blog_2012/public/images/layers.png">
